<assembly>
    <id>bin</id>
    <!-- Generates a zip package containing the needed files -->
    <formats>
        <format>zip</format>
    </formats>
    <!-- Adds dependencies to zip package under lib directory -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
        	<exclude>com.erpak:*</exclude>
            </excludes>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <!-- adds startup scripts to the root directory of zip package -->
        <fileSet>
            <directory>etc</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>run.*</include>
            </includes>
        </fileSet>
        <!-- adds log folder to the root directory of zip package -->
        <fileSet>
            <directory>log</directory>
            <outputDirectory>log</outputDirectory>
            <includes>
                <include>*.log</include>
            </includes>
        </fileSet>
        <!-- adds license folder to the root directory of zip package -->
        <fileSet>
            <directory>license</directory>
            <outputDirectory>license</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>                        
        <!-- adds track system libraries in the libraries folder -->
        <fileSet>
            <directory>track_libraries</directory>
            <outputDirectory>track_libraries</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <!-- adds jar package in the bin folder of zip package -->
        <fileSet>
            <directory>target</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>	
